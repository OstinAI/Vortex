                <!-- Кнопка инструменты -->
                <Button x:Name="Empl1oyees1Window"
                        Style="{StaticResource VortexNeonButton}"
                        Width="NaN" Height="NaN"
                        Margin="-47,1340,2457,-10"
  
                        vortex:ButtonProps.GifSource="Assets/Images/tools.gif"
                        vortex:ButtonProps.GifWidth="105"
                        vortex:ButtonProps.GifHeight="105"
                        vortex:ButtonProps.GifMargin="10,10,0,0"
                        vortex:ButtonProps.GifOffsetX="-5"
                        vortex:ButtonProps.GifOffsetY="-8"
                        vortex:ButtonProps.GifMode="OnHover"
                        vortex:ButtonProps.SkewDirection="Left"

                        vortex:ButtonProps.NeonSide="Bottom"

                        vortex:ButtonProps.TransformOrigin="0,1"
         
                        Click="Ex_Инструменты_Click"/>



            </Grid>


        </Viewbox>


    </Grid>

</Window>

