        vortex:ButtonProps.SkewDirection="Left"

        vortex:ButtonProps.CornerRadius="0"

        vortex:ButtonProps.NeonSide="Bottom"

        vortex:ButtonProps.TransformOrigin="1,1"
        
            />
                
                <!-- Кнопка Сотрудники -->
                <Button x:Name="Ex_Инструменты1_1"
                        Style="{StaticResource VortexNeonButton}"
                        Width="50" Height="50"
                        Margin="129,1341,2381,49"
 
                        vortex:ButtonProps.GifSource="Assets/Images/user.gif"
                        vortex:ButtonProps.GifWidth="45"
                        vortex:ButtonProps.GifHeight="45"
                        vortex:ButtonProps.GifMargin="8,10,0,0"
                        vortex:ButtonProps.GifOffsetX="-5"
                        vortex:ButtonProps.GifOffsetY="-8"
                        vortex:ButtonProps.GifMode="OnHover"
            
                        vortex:ButtonProps.SkewDirection="Left"

                        vortex:ButtonProps.CornerRadius="0"

                        vortex:ButtonProps.NeonSide="Bottom"

                        vortex:ButtonProps.TransformOrigin="1,1"
        
