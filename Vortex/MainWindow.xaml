<Window x:Class="Vortex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfAnimatedGif="clr-namespace:WpfAnimatedGif;assembly=WpfAnimatedGif"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="VORTEX" Height="1440" Width="2560" WindowState="Maximized"
        WindowStartupLocation="CenterScreen" Background="#7F65686B"
        WindowStyle="None" ResizeMode="NoResize"
        KeyDown="Window_KeyDown" Loaded="MainWindow_Loaded">


    <Grid>
        <!-- Масштабируется всё визуальное содержимое ВЕРХНИЙ ЛЕЙБД -->
        <Viewbox Stretch="UniformToFill">
            
            <Grid Width="2560" Height="1440">
                <!-- Фоновое видео -->
                <MediaElement x:Name="BackgroundVideo" 
                      LoadedBehavior="Manual" 
                      UnloadedBehavior="Manual"
                      IsMuted="True" 
                      Stretch="UniformToFill"
                      MediaEnded="BackgroundVideo_MediaEnded"
                      MediaFailed="BackgroundVideo_MediaFailed"/>

                <!-- Лейбл верхний -->
                <Border BorderThickness="1" Margin="-30,-1,0,0" 
                RenderTransformOrigin="0.5,0.5" 
                HorizontalAlignment="Left" Width="1002" 
                VerticalAlignment="Top" Height="52">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-16.453"/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform X="-8.121"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <LinearGradientBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </LinearGradientBrush.RelativeTransform>
                            <GradientStop Color="#FF0E2E47" Offset="1"/>
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop Color="#FF0E2E47" Offset="0.533"/>
                            <GradientStop Color="#7F0E2E47" Offset="0.36"/>
                            <GradientStop Color="#7FFEFEFF" Offset="0.117"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <!-- Кнопка вызова ИИ -->
                <Button x:Name="Ex_ИИ" Content=""
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Height="98" Width="144"
                        BorderBrush="#FF0A3AFD" BorderThickness="10,10,0,0"
                        RenderTransformOrigin="0.5,0.5"
                        MouseEnter="Ex_MouseEnter" MouseLeave="Ex_MouseLeave"
                        Margin="-17,0,0,0">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-16.35"/>
                            <RotateTransform Angle="180"/>
                            <TranslateTransform X="-1.973"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid x:Name="buttonGrid">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="neonBorder" 
                                                 Storyboard.TargetProperty="Opacity"
                                                 To="0" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                 Storyboard.TargetProperty="ScaleX"
                                                 To="1" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                 Storyboard.TargetProperty="ScaleY"
                                                 To="1" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="MouseOver">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="neonBorder" 
                                                 Storyboard.TargetProperty="Opacity"
                                                 To="1" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                 Storyboard.TargetProperty="ScaleX"
                                                 To="1.1" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                 Storyboard.TargetProperty="ScaleY"
                                                 To="1.1" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </VisualState>
                                        <!-- Новое состояние при нажатии -->
                                        <VisualState x:Name="Pressed">
                                            <Storyboard>
                                                <!-- Возвращаем масштаб к исходному значению -->
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                 Storyboard.TargetProperty="ScaleX"
                                                 To="1" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                 Storyboard.TargetProperty="ScaleY"
                                                 To="1" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Grid.RenderTransform>
                                    <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                                </Grid.RenderTransform>
                                <Grid.RenderTransformOrigin>
                                    <Point X="1" Y="1"/>
                                </Grid.RenderTransformOrigin>
                                <Border x:Name="border" BorderBrush="#FF0A3AFD" BorderThickness="0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#0e2e47" Offset="0.5"/>
                                            <GradientStop Color="#2c5474" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect x:Name="dropShadowEffect" Color="Black" BlurRadius="10" 
                                          ShadowDepth="5" Direction="90" Opacity="0.5"/>
                                    </Border.Effect>
                                </Border>
                                <Border x:Name="neonBorder" Height="3" VerticalAlignment="Bottom"
                                        Background="#00FFFF" Opacity="0"/>
                                
                                <!-- Изображение внутри кнопки с анимированным GIF -->
                                <Image x:Name="GifImage" Margin="5,-5,-7,-7"
                                       RenderTransformOrigin="0.5,0.5"
                                       wpfAnimatedGif:ImageBehavior.AnimatedSource="pack://application:,,,/Assets/Images/aione.gif"
                                       wpfAnimatedGif:ImageBehavior.AutoStart="True"
                                       wpfAnimatedGif:ImageBehavior.RepeatBehavior="Forever">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1"/>
                                            <SkewTransform AngleX="14.085" AngleY="-0.034"/>
                                            <RotateTransform Angle="180"/>
                                            <TranslateTransform X="-16.49" Y="0.031"/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

