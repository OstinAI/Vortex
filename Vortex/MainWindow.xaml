                                        <DropShadowEffect x:Name="dropShadowEffect" Color="Black" BlurRadius="10"
                          ShadowDepth="5" Direction="90" Opacity="0.5" />
                                    </Border.Effect>
                                </Border>
                                <!-- Неоновая подсветка (нижняя полоска), по умолчанию скрыта -->
                                <Border x:Name="neonBorder" Height="3" VerticalAlignment="Bottom"
                        Background="#00FFFF" Opacity="0" />

                                <!-- Изображение внутри кнопки с анимированным GIF -->
                                <Image x:Name="GifImage" Margin="88,-5,-4,-4"
                RenderTransformOrigin="0.5,0.5"
                wpfAnimatedGif:ImageBehavior.AnimatedSource="/Assets/Pogoda/sun.gif"
                wpfAnimatedGif:ImageBehavior.AutoStart="False"
                wpfAnimatedGif:ImageBehavior.RepeatBehavior="Forever">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform AngleX="-0.092"/>
                                            <RotateTransform Angle="-180"/>
                                            <TranslateTransform X="-3.999"/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>

                                <!--Текст дата -->
                                <TextBlock x:Name="txtpogoda"
                   Foreground="White" 
                   FontSize="14"
                   FontFamily="Microsoft JhengHei Light"
                   TextAlignment="Left" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5"
                   Width="NaN" Height="NaN" Background="{x:Null}" Margin="10,2,50,4">
                                    <TextBlock.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1"/>
                                            <SkewTransform AngleX="-0.244"/>
                                            <RotateTransform Angle="540"/>
                                            <TranslateTransform X="2.309"/>
                                        </TransformGroup>
                                    </TextBlock.RenderTransform>
                                </TextBlock>



                            </Grid>
